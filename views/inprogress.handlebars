<h1 class="task-status">In-progress Tasks</h1>
<div class="card task-card">
<table class="table is-bordered is-striped is-hoverable is-fullwidth inprogress-table">
    <thead>
        <tr class="is-warning">
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Start date</th>
            <th>Due date</th>
            <th>Priority</th>
            <th>Status</th>
        </tr>
    </thead>

    {{#each tasks as |task| }}
    {{#ifEquals status "inProgress"}}

    <tbody>
        <tr class="taskList">
            <th>{{id}}</th>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>{{format_date start_date}}</td>
            <td>{{format_date due_date}}</td>
            <td>{{priority}}</td>
            <td>{{status}}</td>
            <td><button id="{{id}}" class="button is-danger is-small is-rounded">remove</button></td>

        </tr>
    </tbody>

    {{/ifEquals}}
    {{/each}}
</table>

<script src="/js/tasks.js"></script>
</div>