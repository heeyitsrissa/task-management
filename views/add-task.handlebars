
<div class="box">
    <h2 class="title is-4">New Task</h2>
    <form id="addTaskForm">
        <div class="field">
            <label class="label">Task Name</label>
            <div class="control">
                <input id="title" class="input" type="text" name="title" placeholder="Enter task name" required>
            </div>
        </div>
        <div class="field">
            <label class="label">Description</label>
            <div class="control">
                <textarea id="desc" class="textarea" name="description" placeholder="Enter task description" required></textarea>
            </div>
        </div>
        <div class="field is-grouped">
            <div class="control">
                <button class="button is-primary" type="submit">submit</button>
            </div>
            <div class="control">
                <button class="button is-danger" type="button" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </form>
